<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<% #this will fail until the @user model is added %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, :url => record_audio_path) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.label :passphrase_text, "Enter Passphrase" %>
      <%= f.text_field :passphrase_text, class: 'form-control' %>


      <%= image_submit_tag("Microphone-outlined-circular-button.svg.png", data:{ confirm: "Ready to record audio?"}) %>

    <% end %>
  </div>
</div>
