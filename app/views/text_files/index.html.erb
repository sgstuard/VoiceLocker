<h1>Listing Files</h1>
<%= link_to 'New File', new_text_file_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>

  <% @text_files.each do |file| %>
    <% if file.user_id == current_user.id %>
      <tr>
        <td><%= file.title %></td>
        <td><%= file.text %></td>
        <td><%= link_to 'Show', text_file_path(file) %></td>
        <td><%= link_to 'Edit', edit_text_file_path(file) %></td>
        <td><%= link_to 'Destroy', text_file_path(file),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  <% end %>
</table>

