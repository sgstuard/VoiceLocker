<%= form_for @text_file do |f| %>

    <% if @text_file.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@text_file.errors.count, "error") %> prohibited
            this file from being saved:
          </h2>
          <ul>
            <% @text_file.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title, :value => @decrypted_title||@text_file.title %>
    </p>

    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text, :value => @decrypted_text||@text_file.text %>
    </p>

    <%= f.hidden_field :user_id, :value => current_user.id %>

    <%= f.submit %>

<% end %>